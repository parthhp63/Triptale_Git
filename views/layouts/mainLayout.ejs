<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>TripTale</title>
  <script src="/socket.io.js"></script>
  <link href="/css/output.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/main.css" />
  <link rel="stylesheet" href="/css/search.css" />
  <script src="/sweetalert2.all.min.js"></script>
  <script type="module" src="/index.js"></script>
  <noscript>
    <h1 class="text-4xl">  Please Enable Javascript Or Use Another Browser to Use Trip Tale </h1>
  </noscript>
</head>

<body>
  <!-- <div class="w-screen fixed z-50 h-screen mainLoaderDiv">
    <div class="loader absolute top-1/2 left-1/2"></div>
  </div> -->
  <div>
    <nav class="sticky top-0 bg-white z-[11] shadow-md">
      <div class="mr-5 px-2">
        <div class=" flex h-16 items-center justify-between content-center">
          <a class="flex items-center w-fit px-3 " href="/home">
            <img class="w-[110px] ml-6 mt-2 stroke-current bg-trans" src="/assets/loginlayout/1_prev_ui(1).png" alt="" />
          </a>
          <div class="absolute  right-2 gap-3 flex">
            <button
              class="rounded-full hover:text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-black">
              <a href="/notification"><img class="w-7 h-7 text-white p-1" src="/assets/images/notification.png"
                  alt="" /></a>
              <div id="notification" style="display: none;"
                class="absolute inline-flex items-center justify-center w-5 h-5 text-xs font-bold text-white bg-red-500 border-2 border-white rounded-full top-1.5 end-25 dark:border-gray-900">
              </div>

            </button>

            <div class="group relative  p-3">
              <div class="">
                <button type="button"
                  class="relative flex rounded-full bg-gray-800 text-sm focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800"
                  id="user-menu-button">
                  <span class="absolute -inset-1.5"></span>
                  <span class="sr-only">Open user menu</span>
                  <img class="h-8 w-8 rounded-full" id="profileImage" src="" alt="">
                </button>
              </div>
              <div
                class="absolute  right-0 hidden group-hover:block z-10 mt-2 w-48 origin-top-right rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none"
                role="menu" id="user-menu" tabindex="-1">
                <h3 class="block px-4 py-2 text-xl font-medium text-gray-700">My Account</h3>
                <a href="/userProfile" class="block px-4 py-2 text-sm text-gray-700" role="menuitem" tabindex="-1"
                  id="user-menu-item-0">Your Profile</a>
                <hr>
                <a href="/logout" class="block px-4 py-2 text-sm text-gray-700" role="menuitem" tabindex="-1"
                  id="user-menu-item-2">Sign out</a>
              </div>

            </div>
          </div>
        </div>
      </div>
    </nav>
    <div class="flex">
      <aside class="fixed top-[70px] left-0 w-[15%] bg-white mt-[-6px] border-r-2 rounded-r-2xl">
        <div>
          <div id="fullSlidebar"
            class="relative mx-auto flex flex-col w-40 h-screen overflow-hidden text-black-400 rounded justify-start">
            <div class="mt-5">
              <div class="w-full px-2">
                <div class="flex flex-col items-center gap-4 justify-center w-full mt-3">
                  <a class="flex justify-start items-center w-full h-11 px-3 mt-2 cursor-pointer sidebar-font" href="/home">
                    <img class="w-6 h-6 stroke-current bg-trans" src="/assets/images/home.svg" alt="" />
                    <span class="ml-2 -mb-2 text-xl h-fit">Home</span>
                  </a>
                  <a class="flex justify-start items-center w-full h-11 px-3 mt-2 sidebar-font" href="/search">
                    <img class="w-6 h-6 stroke-current bg-trans " src="/assets/images/search.svg" alt="" />
                    <span class="ml-2 -mb-2 text-xl h-fit">Search</span>
                  </a>
                  <a class="flex justify-start items-center w-full h-11 px-3 mt-2 sidebar-font" href="/displayTrip">
                    <img class="w-6 h-6 stroke-current bg-trans " src="/assets/loginlayout/trip-icon.png" alt="" />
                    <span class="ml-2 -mb-2 text-xl h-fit">Trip</span>
                  </a>
                  <a class="flex justify-start items-center w-full h-11 px-3 mt-2 sidebar-font" href="/create">
                    <img class="w-6 h-6 stroke-current bg-trans " src="/assets/images/post-icon.png" alt="" />
                    <span class="ml-2 -mb-2 text-xl h-fit">Create</span>
                  </a>
                </div>
              </div>
            </div>
          </div>
      </aside>
      <main class="ml-[15%]  float-right w-full"><%-body %></main>
    </div>

    <script src="/js/mainScript.js"></script>
    <script type="module" src="/index.js"></script>
</body>

</html>