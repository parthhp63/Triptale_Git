<div class="h-full w-full fixed hidden top-0 z-0" id="rightbardiv"></div>
<section>
  <aside
    id="rightBar"
    class="w-72 h-[89.3vh] bg-white border rounded-3xl border-black show -translate-x-full fixed"
  >
    <div class="w-full h-screen flex mx-auto">
      <div class="w-full h-full flex flex-col text-gray-900 text-xl">
        <div
          class="fixed z-10 bg-white border-b rounded-t-3xl border-gray-600 p-2 pr-4 h-max w-[285px] flex justify-between items-center"
        >
          <span id="sidebarTitle" class="sub-font text-xl pl-2"></span>
          <img
            id="close"
            class="h-4 w-4 float-right cursor-pointer"
            src="/assets/images/close.png"
            alt="close"
          />
        </div>
        <div
          id="userScroll"
          class="flex flex-col items-between relative top-[40px] overflow-x-hidden justify-between"
        >
          <div
            id="innerTextDiv"
            class="flex flex-col justify-center items-center h-screen"
          >
            <p id="innerText1" class="sub-font text-3xl">No comment yet.</p>
            <span
              id="innerText2"
              class="sub-font text-base text-gray-500 hidden"
              >start the conversation.</span
            >
          </div>
          <ul
            id="userList"
            class="divide-y divide-gray-200 dark:divide-gray-700 relative top-0 sub-font mb-[160px]"
          ></ul>
        </div>
        <div class="fixed bottom-0 bg-white w-[285px] rounded-3xl">
          <div
            id="textBox"
            class="w-[270px] m-2 pl-3 pr-1 py-1 rounded-3xl border border-black items-center inline-flex justify-between hidden bottom-0 bg-white"
          >
            <form id="form" class="flex w-full m-0 gap-2">
              <div class="flex items-center gap-2">
                <input
                  id="comments"
                  class="grow w-[145px] shrink basis-0 text-black text-base font-medium leading-4 focus:outline-none sub-font"
                  placeholder="Type here..."
                  autofocus
                />
              </div>
              <div class="flex items-center gap-2">
                <button class="w-4" >
                  <img
                    src="/assets/images/emoji-icon.png"
                    alt="emoji"
                    class="w-4 h-4"
                    id="emojibtn"
                  />
                </button>
                <button
                  id="sendbtn"
                  class="items-center flex px-3 py-2 bg-indigo-600 rounded-full shadow sub-font"
                >
                  <p class="text-white text-base font-semibold leading-4 px-2">
                    Send
                  </p>
                </button>
              </div>
            </form>
          </div>
          <emoji-picker
            class="light fixed top-[125px] -left-14 rounded-sm hidden"
          ></emoji-picker>
        </div>
      </div>
    </div>
  </aside>
</section>
