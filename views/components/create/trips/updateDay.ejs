<section class=" bg-cover w-full mx-auto " style="
background-image: linear-gradient(
    rgba(250, 249, 249, 0.8),
    rgba(250, 248, 248, 0.8)
  ),
  url(/assets/loginlayout/1976998.jpg);
">
<div>
  <div class="header">
      <h2  style="color: #2077a2; text-align: center; padding-top: 20px;"  class="text-4xl font-extrabold dark:text-black">Edit Day Details  ...</h2>
  </div>

  <div class="w-[65%] mt-3 mx-auto bg-white rounded-md  shadow-[0px_4px_16px_rgba(17,17,26,0.1),_0px_8px_24px_rgba(17,17,26,0.1),_0px_16px_56px_rgba(17,17,26,0.1)]" >
      <form id="updatedayform"    class="mx-auto p-4" >
        <input type="hidden" id="route" value="/trips/updateday?did=<%= data.id %>">
              <div class="row">
                  <div class="col">
                      <label for="title"
                          class="block mb-2 text-sm font-medium text-gray-900 dark:text-black"  style="font-size: 20px;">Title</label>
                      <input type="text" id="title" value="<%= data.title %>" name="title" style=" background-color: white; "
                          class="bg-gray-50 border val-required 
               border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-black dark:focus:ring-blue-500 dark:focus:border-blue-500"
                          placeholder="Enter the title" required />
                  </div><br>

                  <div class="col">
                      <label for="description" 
                          class="block mb-2 text-sm font-medium text-gray-900 dark:text-black"  style="font-size: 20px;">Description</label>
                      <textarea id="description" rows="4" name="description" style=" background-color: white; "
                          class="val-required block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-black dark:focus:ring-blue-500 dark:focus:border-blue-500"
                          placeholder="Write your description here..."><%= data.discription %></textarea>
                  </div><br>

                  <div class="col">
                      <label for="location"
                          class="block mb-2 text-sm font-medium text-gray-900 dark:text-black"  style="font-size: 20px;">Location</label>
                      <input type="text" id="location" name="location" value="<%= data.location %>" style=" background-color: white;  "
                          class=" val-required bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-black dark:focus:ring-blue-500 dark:focus:border-blue-500"
                          placeholder="Enter the location" required />
                  </div><br>
           
                  <div class="flex">

                  
                    <input type="button" id="submit" 
                           class="cursor-pointer text-black bg-gradient-to-r from-cyan-400 via-cyan-500 to-cyan-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-cyan-300 dark:focus:ring-cyan-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2"
                           value="submit" > 
     
                       <a href="javascript:history.back()"><input type="button"
                               class="cursor-pointer text-black bg-gradient-to-r from-cyan-400 via-cyan-500 to-cyan-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-cyan-300 dark:focus:ring-cyan-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2"
                               value="Cancel" >
                       </a>
             
                      </div>
              </div>
         
        </form>
  </div>
</div>

</section>

<script src="/js/updateDays.js"></script>
